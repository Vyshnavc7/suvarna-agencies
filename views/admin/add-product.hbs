{{!-- it is for add product form
enctype is for file sharing to server --}}
<section>
    <div class="container mt-3">
        <a class="pull-right btn btn-primary " href="/admin/all-products">Back</a>
        <h2>Add product</h2>
        <form action="/admin/add-product" enctype="multipart/form-data" method="post">
            <div class="form-group mt-3">
                <label  for="email">Product Name:</label>
                <input type="text" class="form-control" id="email" placeholder="Enter Name of the product" name="name" required>
            </div>
            <div class="dropdown btn btn-primary" style="border-color: #90deea;background-color: #90deea;">

                <select required class="form-select  text-left" name="category" style="border-color: #90deea;background-color: #90deea;" aria-label="Default select example">
                    {{#each categorys}}
                    <option name="category" value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group mt-2">
                <label for="pwd">Price:</label>
                <input required type="text" class="form-control" id="price" placeholder="Enter Price" name="price">
            </div>
            <div class="form-group">
                <label for="pwd">Details:</label>
                <input required type="text" class="form-control" id="det" placeholder="Enter Details" name="det">
            </div>

            <div class="form-group">
                <label for="exampleFormControlFile1">CHOOSE THE IMAGE</label>
                <input required type="file" name="image" class="form-control-file mt-1" id="exampleFormControlFile1">
            </div>


            <button type="submit" class="btn btn-primary">ADD</button>
        </form>
    </div>
</section>