<section>
    <div class="container">
        <table class="table table-bordered">
            <div class="row mt-3">
                <a class="btn btn-success ml-auto m-3" href="/admin/add-product">Add Product</a>
                
            </div>
            
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name of Product</th>
                    <th scope="col">Category </th>
                    <th scope="col">Price</th>
                    <th scope="col">Details</th>
                    <th scope="col">Images</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td></td>
                    <td>{{this.price}}</td>
                    <td>{{this.det}}</td>
                    <td><img class="img-thumbnail rounded img-fluid float-center" style="height: 50px; width: 50px;" src="/product-images/{{this._id}}.jpg"></td>
                    <td><a href="/admin/edit-product" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you Sure want to delete ? {{this.name}}')">Delete</a></td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
    </div>
</section>